<div class="title-container">
  <h1>Artists</h1> <h5>create an index of your fav artists</h5>
  <%= link_to "New Artist", new_artist_path, class: "btn btn-primary" %>
</div>


<div class="artists">
  <% @artists.each do |artist| %>
  <div class="artist">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= link_to truncate(artist.name), artist_path(artist) %></h3>
        <p><%= truncate(artist.description, length: 150) %></p>
        <p>
          <%= link_to "Edit", edit_artist_path(artist), class: "btn btn-info" %>
          <%= link_to "Delete", artist_path(artist), class: "btn btn-danger", data: {
            confirm: "Are you sure you want to delete: #{artist.name}?",
          }, method: :delete %>
        </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
